#!/usr/bin/env bash
# Script to create a custom 404 page

apt-get -y update
apt-get -y install nginx
service nginx start
sudo chown -R "$USER":"$USER" /var/www
echo "Hello World!" > /var/www/html/index.nginx-debian.html
sed -i "/server_name _;/ a\\\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"  /etc/nginx/sites-available/defaultservice nginx restart
